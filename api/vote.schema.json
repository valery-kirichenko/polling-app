{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^(([0-9a-f]){24}|([0-9a-zA-Z-_]){3,64})$"
    },
    "option": {
      "type": "integer",
      "minimum": 0
    }
  },
  "required": [
    "id",
    "option"
  ]
}